{
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "outDir": "./dist/",
    "removeComments": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "test/",
  ]
}
